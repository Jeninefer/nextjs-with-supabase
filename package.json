{
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "sonar": "node sonar-project.js",
    "sonar:local": "sonar-scanner",
    "sonar:ci": "sonar-scanner -Dsonar.analysis.mode=publish",
    "test:coverage": "jest --coverage --watchAll=false --passWithNoTests",
    "test:ci": "jest --coverage --watchAll=false --ci --passWithNoTests",
    "lint:report": "eslint . --ext .ts,.tsx,.js,.jsx --format json --output-file eslint-report.json",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "quality:check": "npm run lint:report && npm run test:coverage && npm run sonar",
    "quality:ci": "npm run lint:report && npm run test:ci && npm run sonar:ci",
    "azure:sonar": "npm run test:coverage && sonar-scanner",
    "security:audit": "npm audit --audit-level moderate",
    "security:scan": "npm run security:audit && npm run lint:report",
    "agents:test": "jest --testPathPattern=agents --coverage",
    "agents:eval": "npm run agents:test && echo 'Agent evaluation completed'",
    "db:analyze": "echo 'Analyzing database migrations...' && find supabase/migrations -name '*.sql' -exec echo 'Found: {}' \\;",
    "platform:validate": "npm run quality:check && npm run security:scan && npm run agents:eval && npm run db:analyze"
  },
  "dependencies": {
    "@azure/cosmos": "^4.7.0",
    "@radix-ui/react-checkbox": "^1.3.1",
    "@radix-ui/react-dropdown-menu": "^2.1.14",
    "@radix-ui/react-label": "^2.1.6",
    "@radix-ui/react-slot": "^1.2.2",
    "@supabase/ssr": "latest",
    "@supabase/supabase-js": "latest",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.511.0",
    "next": "latest",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.0.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.20",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-sonar-reporter": "^2.0.0",
    "postcss": "^8",
    "sonarqube-scanner": "^3.3.0",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5"

  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml",
    "indent": 4
  }
}
