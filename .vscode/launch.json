{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ABACO: Next.js Development Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/next",
            "args": [
                "dev"
            ],
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            },
            "serverReadyAction": {
                "pattern": "Local:.+(https?://localhost:[0-9]+)",
                "uriFormat": "%s",
                "action": "openExternally"
            }
        },
        {
            "name": "ABACO: Next.js Production Build",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/next",
            "args": [
                "start"
            ],
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "production"
            }
        },
        {
            "name": "ABACO: Debug API Route",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "restart": true,
            "sourceMaps": true,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "${workspaceFolder}"
        },
        {
            "name": "ABACO: Python Financial Analysis",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/notebooks/abaco_financial_intelligence.py",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/abaco_venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "ABACO: Python Validation Script",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/notebooks/generate_validation_results.py",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/abaco_venv/bin/python"
        }
    ],
    "compounds": [
        {
            "name": "ABACO: Full Stack Debug",
            "configurations": [
                "ABACO: Next.js Development Server",
                "ABACO: Debug API Route"
            ],
            "presentation": {
                "order": 1
            }
        }
    ]
}