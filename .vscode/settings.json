{
    "git.autofetch": true,
    "json.schemaDownload.enable": true,
    "typescript.disableAutomaticTypeAcquisition": true,
    "redhat.telemetry.enabled": false,
    "typescript.preferences.importModuleSpecifier": "relative",
    "typescript.suggest.autoImports": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit",
        "source.organizeImports": "explicit"
    },
    "files.associations": {
        "*.tsx": "typescriptreact",
        "*.ts": "typescript",
        "*.json": "jsonc"
    },
    "emmet.includeLanguages": {
        "typescript": "html",
        "typescriptreact": "html"
    },
    "tailwindCSS.includeLanguages": {
        "typescript": "html",
        "typescriptreact": "html"
    },
    "tailwindCSS.experimental.classRegex": [
        "cn\\(([^)]*)\\)"
    ],
    // NOTE: After running 'setup_abaco_environment.sh' to create the virtual environment,
    // use the VS Code command palette (Ctrl+Shift+P) and select "Python: Select Interpreter"
    // to choose the interpreter at '${workspaceFolder}/abaco_venv/bin/python'.
    "python.terminal.activateEnvironment": false,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/.next": true,
        "**/__pycache__": true,
        "**/*.pyc": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/.next": true,
        "**/dist": true,
        "**/__pycache__": true
    },
    "eslint.workingDirectories": [
        {
            "directory": ".",
            "changeProcessCWD": true
        }
    ],
    "nextjs.serverPort": 3000,
    "cs-script.execMode": "Standard",
    "cs-script.syntaxCheckOnSave": true,
    "spellright.language": [
        "en"
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext",
        "shellscript",
        "python"
    ],
    "jupyter.notebookFileRoot": "${workspaceFolder}"
}